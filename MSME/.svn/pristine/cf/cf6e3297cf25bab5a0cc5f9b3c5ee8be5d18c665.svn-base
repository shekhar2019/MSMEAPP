@model List<Portal.Core.ViewModel.UserEmailSettingViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblUserList">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Full Name</th>
                    <th>SMTP User</th>
                    <th>Enable Ssl</th>
                    <th>Port</th>
                    <th>SmtpServer</th>
                    <th>Display Name</th>
                    <th>Created By</th>
                    <th>Created Date</th>
                    <th>Status</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.UserId</td>
                        <td>@item.FullName</td>
                        <td>@item.SmtpUser</td>
                        <td>@(item.EnableSsl == true ? "Active" : "Inactive")</td>
                        <td>@item.SmtpPort</td>
                        <td>@item.SmtpServer</td>
                        <td>@item.SmtpDisplayName</td>
                        <td>@item.CreatedByName</td>
                        <td>@item.CreatedDate</td>
                        
                        <td>@(item.UserStatus==true?"Active":"Inactive")</td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px auto;">
                            <a style="color:white"  class="fa fa-eye" aria-hidden="true" href="~/UserEmailSetting/AddEditUserEmailSetting?userEmailSettingId=@item.SettingId&AccessMode=3"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="~/UserEmailSetting/AddEditUserEmailSetting?userEmailSettingId=@item.SettingId&AccessMode=2"></a>
                        </td>

                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblUserList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>