@{
    ViewBag.Title = "Add ProductType";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AdminDashboard">Control Panel</a> >> Add/Edit ProductType </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditProductType" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-6 ftop">
                <div class="form-group">
                    <label for="txtProductTypeName" class="col-sm-4 control-label">Product Type Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtProductTypeName" name="txtProductTypeName" tabindex="1" placeholder="Enter Product Type Name" type="text" maxlength="100" />
                        <input id="hdnProductTypeID" type="hidden" value="@ViewData["producttypeId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtstatus" class="col-sm-4 control-label">Status&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="chkstatus" name="chkstatus" type="checkbox" checked="checked" tabindex="4" />
                    </div>
                </div>
            </div>
            <div class="col-md-6 ftop">
                <div class="form-group">
                    <label for="txtProductTypeCode" class="col-sm-4 control-label">Product Type Code&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtProductTypeCode" name="txtProductTypeCode" tabindex="2" type="text" placeholder="Enter Product Type Code" maxlength="10" class="form-control alpha-only" />
                    </div>
                </div> 
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Save" alt="Save" id="btnSave" onclick="SaveData(1)" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" value="Update" style="display:none;" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        @*<input class="btn btn-success" type="button" id="btnList" value="Search Company" />*@
                        <a class="btn btn-success" id="btnList" href="@Url.Content("~/ProductType/ListProductType")">Search Product Type</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/ProductType/AddProductType.js"></script>