<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ARH Technologies</title>
    <meta name="google-site-verification" content="PjguVdaIL3YnJnmB2uAYomOBGTHlSopn6XWaQ07Gnms" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/favicon.png">

    <!-- Normalize CSS -->

    <link href="~/Content/web/normalize.css" rel="stylesheet" />
    <!-- Main CSS -->
     <link href="~/Content/web/main.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link href="~/Content/web/bootstrap.min.css" rel="stylesheet" />

    <!-- Animate CSS -->

    <link href="~/Content/web/animate.min.css" rel="stylesheet" />
    <!-- Font-awesome CSS-->

    <link href="~/Content/web/font-awesome.min.css" rel="stylesheet" />

    <!-- Owl Caousel CSS -->
    <link href="~/Content/Vendor/OwlCarousel/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/Vendor/OwlCarousel/owl.theme.default.min.css" rel="stylesheet" />
   
    <!-- Main Menu CSS -->
    
    <link href="~/Content/web/meanmenu.min.css" rel="stylesheet" />
    <!-- nivo slider CSS -->
    <link href="~/Content/Vendor/slider/css/nivo-slider.css" rel="stylesheet" />
    <link href="~/Content/Vendor/slider/css/preview.css" rel="stylesheet" />
    <!-- Datetime Picker Style CSS -->

    <link href="~/Content/web/jquery.datetimepicker.css" rel="stylesheet" />
    <!-- Select2 CSS -->

    <link href="~/Content/web/select2.min.css" rel="stylesheet" />
    <!-- Magic popup CSS -->
    <link href="~/Content/web/magnific-popup.css" rel="stylesheet" />
    <!-- Switch Style CSS -->
    <link href="~/Content/web/hover-min.css" rel="stylesheet" />
    <!-- Nouislider Style CSS -->
    
    <link href="~/Content/Vendor/noUiSlider/nouislider.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    
    <link href="~/Content/web/style.css" rel="stylesheet" />

    <!-- Modernizr Js -->
    <script src="~/Scripts/modernizr-2.8.3.min.js"></script> 

    
    <style type="text/css">
        #wrapper {
   overflow:visible;
  -webkit-transition: all 0.5s ease-out;
  -moz-transition: all 0.5s ease-out;
  -ms-transition: all 0.5s ease-out;
  -o-transition: all 0.5s ease-out;
  transition: all 0.5s ease-out;
    }
    </style> 
    @{ 
        var contactInfo = Session["contactInfo"] as List<Portal.Core.ContactInfoViewModel>;
        var mission = Session["mission"] as List<Portal.Core.AboutUsViewModel>;
        var MenuList = Session["HomeMenuList"] as List<Portal.Core.ViewModel.MenuViewModel>;
        var logo = Session["logo"] as Portal.Core.ViewModel.LogoViewModel;
        var copyright = Session["copyright"] as List<Portal.Core.ViewModel.CopyRightViewModel>;
    }
</head>
<body>
    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!-- Add your site or application content here -->
    <div id="wrapper">
        <header>
            <div id="header2" class="header2-area">
                <div class="header-top-area">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="header-top-left">
                                    <ul>
                                        <li style="visibility:hidden"><i class="fa fa-phone" aria-hidden="true"></i><a href="Tel:+1234567890"> +91-9350 887 734 </a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="header-top-right">
                                    <ul>
                                        <li style="visibility:hidden"><i class="fa fa-envelope" aria-hidden="true" style="color:#000; padding-top:15px;"></i><a href="#" style="color:#000; padding-top:15px; ">&nbsp; &nbspinfo@arhtechnologies.com</a></li>
                                        <li>

                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="main-menu-area bg-textPrimary" id="sticker">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-3 col-md-2 col-sm-3">
                                <div class="logo-area">
                                    <a href="~/Home/Index"><img class="img-responsive" src="~/Images/CompanyLogo/@logo.LogoPath" alt="@logo.Title"></a>
                                </div>
                            </div>
                            <!--Primary Header for menu-->
                            <div class="col-lg-9 col-md-9 col-sm-9">
                                <nav id="desktop-nav">
                             @if (MenuList != null)
                            {
                                <ul>
                                    @foreach(var menu in MenuList)
                                    {
                                    <li>
                                        <a href="@menu.MenuLink" title="@menu.MenuName">@menu.MenuName</a>
                                        @if(menu.subMenuList!=null)
                                        {
                                            <ul>
                                                @foreach(var submenu in menu.subMenuList)
                                                {
                                                    <li class="has-child-menu">
                                                        <a href="@submenu.SubMenuLink">@submenu.SubMenuName</a>
                                                        @if (submenu.subChildMenuList != null)
                                                        {
                                                            <ul class="thired-level">
                                                                @foreach (var subChildMenu in submenu.subChildMenuList)
                                                                {
                                                                    <li><a href='@subChildMenu.SubChildMenuLink'>@subChildMenu.SubChildMenuName</a></li>
                                                                }
                                                            </ul>
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    </li>
                                    }
                                </ul>
                            }
                                   
                                </nav>
                            </div>
                            <!--End Primary Header menu-->
                        </div>
                    </div>
                </div>
            </div>
            <!-- Mobile Menu Area Start -->
            <!-- Mobile Menu Area End -->
        </header>
        <!-- Header Area End Here -->
    </div>

    <div class="mobile-menu-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mobile-menu">
                        <nav id="dropdown">
                            @if(MenuList!=null)
                            {
                                int @i = 1;
                                <ul>
                                   @foreach (var menu in MenuList)
                                   {
                                    <li id=@i>
                                        <a href="@menu.MenuLink" title="@menu.MenuName">@menu.MenuName</a>
                                        @if (menu.subMenuList != null)
                                        {
                                            <ul>
                                                @foreach (var submenu in menu.subMenuList)
                                                {
                                                    <li class="has-child-menu">
                                                        <a href="@submenu.SubMenuLink">@submenu.SubMenuName</a>
                                                        @if (submenu.subChildMenuList != null)
                                                        {
                                                            <ul class="thired-level">
                                                                @foreach (var subChildMenu in submenu.subChildMenuList)
                                                                {
                                                                    <li><a href='@subChildMenu.SubChildMenuLink'>@subChildMenu.SubChildMenuName</a></li>
                                                                }
                                                            </ul>
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    </li>

                                    i+= 1;
                                   }
                                    
                                </ul>
                            }
                            

   
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Header Area End Here -->
    <!-- Slider 1 Area Start Here -->  
  
      <!-- Header Area End Here -->
    <!-- Slider 1 Area Start Here -->
    @RenderBody()

    
    <!-- Footer Area Start Here -->
    <footer>
        <div class="footer-area-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                        <div class="footer-box">
                            @if (mission !=null)
                            {
                                foreach (var missionitem in mission)
                                {
                                    <h3>@missionitem.AboutusTitle</h3>
                                    <div class="footer-about">
                                    <p>@missionitem.Description</p>
                                    </div>
                                }
                            }
                            <ul class="footer-social">
                                <li><a target="_blank" href="https://www.facebook.com/arhtechnologies/"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                <li><a target="_blank" href="https://www.twitter.com/"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                <li><a target="_blank" href="https://www.linkedin.com/"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                                <li><a target="_blank" href="https://www.pinterest.com/"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                                <li><a target="_blank" href="https://www.rss_feed.com/"><i class="fa fa-rss" aria-hidden="true"></i></a></li>
                                <li><a target="_blank" href="https://www.gplus.com/"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-6 col-xs-12">

                        <div class="footer-box">
                            <h3 style="text-align:center;">Menu</h3>
                            <ul class="featured-links" style="text-align:center;">
                                <li>
                                    @if (MenuList != null)
                                    {
                                        <ul>
                                            @foreach (var menu in MenuList)
                                            {
                                                <li>
                                                    <a href="@menu.MenuLink" title="@menu.MenuName">@menu.MenuName</a>
               
                                                </li>
                                            }
                                        </ul>
                                    }

                                    @*<ul>
                                        <li><a href="index.html">Home</a></li>
                                        <li><a href="about_us.html">About Us</a></li>
                                        <li><a href="#">Products</a></li>
                                        <li><a href="download.html">Downloads</a></li>
                                        <li><a href="contact.html">Contact Us</a></li>
                                    </ul>*@
                                </li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="footer-box">
                            <h3 style="text-align:center;">Reach us</h3>
                            <ul class="corporate-address">
                                @if(contactInfo!=null)
                                {
                                    foreach (var item in contactInfo)
                                    {
                                        if(item.ContactInfoStatus == false)
                                        {
                                        <li><i class="fa fa-map-marker" aria-hidden="true"></i><a href="#"><p>@item.Address</p></a></li>
                                        <li><i class="fa fa-phone" aria-hidden="true"></i><a href="#">@Html.Raw(@item.Phone)</a></li>
                                        <li><i class="fa fa-globe" aria-hidden="true"></i><a href="http://www.arhtechnologies.com/" target="_blank">@item.Website</a></li>
                                        <li><a href="mailto:@item.Email"><i class="fa fa-envelope-o" aria-hidden="true"></i>@Html.Raw(@item.Email)</a></li>
                                        }
                                    }
                                }
                            </ul>

                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="footer-box">
                            <h3>Fins Us on Map</h3>
                            <ul class="flickr-photos">
                                <li><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3586996.211357905!2d75.13425561177452!3d28.60199708010437!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390cef8aab3a2fef%3A0x463344be5147411f!2sARH+Technologies+Private+Limited!5e0!3m2!1sen!2sin!4v1509429152283" width="300" height="200" frameborder="0" style="border:0" allowfullscreen></iframe></li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-area-bottom">
                <div class="container">
                    <div class="row">
                        @{
                            if (copyright != null)
                            {
                                foreach (var item in copyright)
                                {
                                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                                        <p style="margin:0 0 8px 0; color:#000;">@Html.Raw(item.Description)</p>
                                    </div>
                                }
                            }
                        }
                   
                        
                    </div>
                </div>
            </div>
        </div>

    </footer>
   
    <!-- Main Body Area End Here -->
    <!-- jquery-->
    <script src="~/Scripts/jquery-2.2.4.min.js" type="text/javascript"></script>
    <!-- Plugins js -->
    <script src="~/Scripts/plugins.js" type="text/javascript"></script>

    <!-- Bootstrap js -->
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>

    <!-- WOW JS -->
    <script src="~/Scripts/wow.min.js"></script>
   
    <!-- Nivo slider js -->


    <script src="~/Content/Vendor/slider/js/jquery.nivo.slider.js"></script>
    <script src="~/Content/Vendor/slider/home.js"></script>
    <!-- Owl Cauosel JS -->

    <script src="~/Content/Vendor/OwlCarousel/owl.carousel.min.js"></script>
    <!-- Meanmenu Js -->
    <script src="~/Scripts/jquery.meanmenu.min.js" type="text/javascript"></script>

    <!-- Srollup js -->
    <script src="~/Scripts/jquery.scrollUp.min.js" type="text/javascript"></script>

    <!-- jquery.counterup js -->
    <script src="~/Scripts/jquery.counterup.min.js"></script>
    <script src="~/Scripts/waypoints.min.js"></script>
    <!-- Countdown js -->
    <script src="~/Scripts/jquery.countdown.min.js"></script>

    <!-- Isotope js -->
    <script src="~/Scripts/isotope.pkgd.min.js"></script>

    <!-- Magic Popup js -->
    <script src="~/Scripts/jquery.magnific-popup.min.js"></script>

    <!-- Custom Js -->
    <script src="~/Scripts/main.js"></script>
    
    <script type="text/javascript">
        $(document).ready(function () {
            $('nav#dropdown').meanmenu({ siteLogo: "<a href='index.html' class='logo-mobile-menu'><img src='../Images/CompanyLogo/@logo.LogoPath'/></a>" });
             document.getElementById('hidCont').style.display = 'none';
             $('#getVal').click(function() {
                    document.getElementById('orgCont').style.display = 'none';
                    document.getElementById('hidCont').style.display = 'block';
                });
            });

    </script>
       
</body>
</html>
