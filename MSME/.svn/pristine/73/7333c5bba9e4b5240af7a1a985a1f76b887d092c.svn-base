@model List<Portal.Core.ViewModel.ProductOpeningViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblUserList">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Product Code</th>
                    <th>Short Desc</th>
                    <th>Financial Year</th>
                    <th>Company Branch</th>
                    <th>Opening Qty.</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.ProductName</td>
                        <td>@item.ProductCode</td>
                        <td>@item.ProductShortDesc</td>
                        <td>@item.FinYearDesc</td>
                        <td>@item.BranchName</td>
                        <td>@item.OpeningQty</td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px auto;">
                            <a style="color:white"  class="fa fa-eye" aria-hidden="true" href="~/ProductOpeningStock/AddEditProductOpening?OpeningTrnId=@item.OpeningTrnId&AccessMode=3"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="~/ProductOpeningStock/AddEditProductOpening?OpeningTrnId=@item.OpeningTrnId&AccessMode=2"></a>
                        </td>

                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblUserList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>