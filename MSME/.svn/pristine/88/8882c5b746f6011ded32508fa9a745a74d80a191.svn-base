@model List<Portal.Core.ViewModel.SaleInvoiceViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
<style>
    .table {
    width: 275% !important;
    max-width: 275%  !important;
    margin-bottom: 20px;
}
</style>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblSaleInvoiceList">
            <thead>
                <tr>
                    <th>Invoice No.</th>
                    <th>Invoice Date</th>
                    <th>Sale Order No.</th>
                    <th>Sale Order Date</th>
                    <th>Customer Name</th>
                    <th>Customer Code</th>
                    <th>Contact Person</th>
                    <th>Billing Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Pin Code</th>
                    <th>CST No</th>
                    <th>TIN No</th>
                    <th>Shipping Address</th> 
                    <th>Shipping City</th>
                    <th>Shipping State</th>
                    <th>Shipping Pin Code</th> 
                    <th>Shipping TIN No</th>
                    <th>Book Branch</th>
                    <th>Book Name</th> 
                    <th>Ref. No.</th>
                    <th>Ref. Date</th>
                    <th>Gross Amount</th>
                    <th>Freight Value</th>
                    <th>Loading Value</th>  
                    <th>Net Amount</th>
                    <th>Created By User</th>
                    <th>Created Date</th>
                    <th>Modified By User</th>
                    <th>Modified Date</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td style="margin:0px 2px auto;">
                            <a style="color:dodgerblue" href="~/SaleInvoice/AddEditSaleInvoice?siId=@item.InvoiceId&AccessMode=2">@item.InvoiceNo</a>
                        </td> 
                        <td>@item.InvoiceDate</td>
                        <td>@item.SONo</td>
                        <td>@item.SODate</td>
                        <td>@item.CustomerName</td>
                        <td>@item.CustomerCode</td>
                        <td>@item.ContactPerson</td>
                        <td>@item.BillingAddress</td>
                        <td>@item.City</td>
                        <td>@item.StateName</td>
                        <td>@item.PinCode</td>
                        <td>@item.CSTNo</td>
                        <td>@item.TINNo</td>
                        <td>@item.ShippingBillingAddress</td>
                        <td>@item.ShippingCity</td>
                        <td>@item.ShippingStateName</td>
                        <td>@item.ShippingPinCode</td>
                        <td>@item.ShippingTINNo</td> 
                        <td>@item.PayToBookBranch</td>
                        <td>@item.PayToBookName</td>  
                        <td>@item.RefNo</td>
                        <td>@item.RefDate</td>
                        <td>@item.BasicValue</td>
                        <td>@item.FreightValue</td>
                        <td>@item.LoadingValue</td>
                        <td>@item.TotalValue</td>
                        <td>@item.CreatedByUserName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedByUserName</td>
                        <td>@item.ModifiedDate</td> 
  </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblSaleInvoiceList').paging({
            limit: 100,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>