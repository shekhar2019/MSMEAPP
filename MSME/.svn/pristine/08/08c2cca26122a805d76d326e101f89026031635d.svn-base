@{
    ViewBag.Title = "Add ProductSubGroup";
    //Layout = "~/Views/Shared/_InventoryLayout.cshtml";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .Mandatory {
        color: red;
        font-weight: bold;
    }
</style>
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/InventoryDashboard">Inventory</a> >> Add/Edit Category </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditProductSubGroup" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">
            </div>
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtProductSubGroupName" class="col-sm-4 control-label">Category Name (C2)&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtProductSubGroupName" name="txtProductSubGroupName" tabindex="1" placeholder="Enter Category Name" type="text" maxlength="100" />
                        <input id="hdnProductSubGroupId" type="hidden" value="@ViewData["productsubgroupId"]" />
                        <input id="hdnAccessMode" type="hidden" value="@ViewData["accessMode"]" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtProductSubGroupCode" class="col-sm-4 control-label">Category Code (C2)&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtProductSubGroupCode" name="txtProductSubGroupCode" tabindex="2" placeholder="Enter Category Code" type="text" maxlength="20" />

                    </div>
                </div>
            </div>

            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="ddlProductMainGroup" class="col-sm-4 control-label">Parent Group (C1)&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <select id="ddlProductMainGroup" name="ddlProductMainGroup" tabindex="3" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="chkstatus" class="col-sm-4 control-label">Status&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="chkstatus" name="chkstatus" type="checkbox" checked="checked" tabindex="4" />
                    </div>
                </div>

                </div>

            <div class="col-md-12">
                        <div class="form-group col-md-6">
                            <label for="txtProductSubGroupDesc" class="col-sm-4 control-label">Category Description</label>
                            <div class="col-sm-8">
                                <textarea id="txtProductSubGroupDesc" name="txtProductSubGroupDesc" rows="5" cols="50" tabindex="3" placeholder="Enter Category Description" maxlength="500" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="imgUserPic" class="col-sm-4 control-label">Upload Image</label>
                            <div class="col-sm-8">
                                <img id="imgUserPic" class="imgUserPic" width="70" height="70" style="margin-bottom:20px;" src="" />
                                <input type="file" id="FileUpload1" tabindex="2" name="FileUpload1" onchange="ShowImagePreview(this);" />
                                <a id="btnRemoveImg" style="display:none" onclick="ConfirmRemoveImage()">Remove Image</a>
                                <input type="hidden" id="hdnRemoveImage" value="0" />
                            </div>
                        </div>

                    </div>

                  
                    <div class="row col-sm-6 col-lg-12 col-md-12">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <center>
                                <input class="btn btn-success" value="Save" alt="Save" id="btnSave" tabindex="5" onclick="SaveData(1)" type="button" border="0">&nbsp;&nbsp;
                                <input class="btn btn-success" value="Update" style="display:none;" tabindex="5" alt="Update" id="btnUpdate" onclick="SaveData(2)" type="button" border="0">&nbsp;&nbsp;
                                <input class="btn btn-success" type="button" tabindex="6" id="btnReset" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                                @*<input class="btn btn-success" type="button" id="btnList" value="Search Company" />*@
                                <a class="btn btn-success" tabindex="7" id="btnList" href="@Url.Content("~/ProductSubGroup/ListProductSubGroup")">Search Category</a>
                            </center>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="alertModel" role="dialog">
                    <div class="modal-dialog  modal-sm">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title" id="modelHeader"></h4>
                            </div>
                            <div class="modal-body">
                                <p id="modelText"></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
</form>
</section>
<script src="~/Scripts/ProductSubGroup/AddProductSubGroup.js"></script>
