        $('.owl_slider').owlCarousel({
            loop: true,
            margin: 0,
            nav: true,
            dots: true,
            autoPlay: true,
            responsive: {
                0: {
                    items: 1
                },
                600: {
                    items: 1
                },
                1000: {
                    items: 1
                }
            }
        });

    </script>

    @*<script src="../Content/Msme/js/jquery.js"></script>*@

</body>
