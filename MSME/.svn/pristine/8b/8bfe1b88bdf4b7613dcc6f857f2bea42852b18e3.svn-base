    @{
        var contactInfo = Session["contactInfo"] as List<Portal.Core.ContactInfoViewModel>;
        var mission = Session["mission"] as List<Portal.Core.AboutUsViewModel>;
        var MenuList = Session["HomeMenuList"] as List<Portal.Core.ViewModel.MenuViewModel>;
        var logo = Session["logo"] as Portal.Core.ViewModel.LogoViewModel;
