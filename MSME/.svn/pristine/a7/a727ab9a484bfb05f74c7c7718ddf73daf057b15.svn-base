@{
    ViewBag.Title = "List Sale Invoice Summary";
    Layout = "~/Views/Shared/_SaleLayout.cshtml";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/SaleDashboard">Sale </a> >> List Sale Invoice Summary </b></p></div>
</div>
<section>
    <form action="#" id="frmAddEditSaleInvoiceRegister" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
            <div class="col-md-12 ftop">
                <div class="form-group  col-md-6">
                    <label for="txtCustomerName" class="col-sm-4 control-label">Customer Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCustomerName" name="txtCustomerName" tabindex="2" placeholder="Search with Customer Name" type="text" maxlength="100" />
                        <input type="hidden" value="0" id="hdnCustomerId" />
                    </div>
                </div>
                <div class="form-group  col-md-6 ">
                    <label for="txtCustomerCode" class="col-sm-4 control-label">Customer Code</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCustomerCode" name="txtCustomerCode" tabindex="2" placeholder="Search with Customer Code" type="text" maxlength="100" />
                    </div>
                </div>
            </div>
            

            <div class="col-md-12">
                <div class="form-group col-md-6">
                    <label for="txtCreatedBy" class="col-sm-4 control-label">Executive</label>
                    <div class="col-sm-8">
                        <input class="form-control" id="txtCreatedBy" name="txtCreatedBy" tabindex="15" placeholder="Created By User Name" type="text" maxlength="100" />
                        <input type="hidden" value="0" id="hdnCreatedId" />
                    </div>
                </div>
                <div class="form-group  col-md-6 ">
                    <label for="ddlState" class="col-sm-4 control-label">State</label>
                    <div class="col-sm-8">
                        <select id="ddlState" name="ddlState" tabindex="8" class="form-control"></select>
                    </div>
                </div>
            </div>


            <div class="col-md-12">
                <div class="form-group col-md-6"> 
                    <label for="txtFromDate" class="col-sm-4 control-label">Sale Invoice From Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtFromDate" name="txtFromDate" tabindex="4" value="@ViewData["fromDate"]" type="text" maxlength="50" />
                        <input id="hdnFromDate" name="hdnFromDate" value="@ViewData["fromDate"]" type="hidden" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtToDate" class="col-sm-4 control-label">To Date</label>
                    <div class="col-sm-8 ">
                        <input class="form-control" id="txtToDate" name="txtToDate" tabindex="5" value="@ViewData["toDate"]" type="text" maxlength="50" />
                        <input id="hdnToDate" name="hdnToDate" value="@ViewData["toDate"]" type="hidden" />
                    </div>
                </div>
            </div>
            <div class="row col-sm-12 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" onclick="SearchSaleInvocieSummary()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp; 
                        <input class="btn btn-success" value="Export" alt="Export" id="btnExport" onclick="Export()" type="button" border="0">
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section> 
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
<script src="~/Scripts/Common.js"></script>
<script src="~/Scripts/SaleInvoiceSummary/ListSaleInvoiceSummary.js"></script>