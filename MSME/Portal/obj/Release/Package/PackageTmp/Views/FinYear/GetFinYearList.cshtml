@model List<Portal.Core.ViewModel.FinYearViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblFinYearList">
            <thead>
                <tr>
                    <th>Start Period</th>
                    <th>End Period</th>
                    <th>Fin. Year Code</th>
                    <th>Fin. Year Desc.</th>
                    <th>Fin. Year Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.StartDate</td>
                        <td>@item.EndDate</td>
                        <td>@item.FinYearCode</td>
                        <td>@item.FinYearDesc</td>
                        <td>@(item.FinYearStatus==true?"Active":"Inactive")</td>
                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblFinYearList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>