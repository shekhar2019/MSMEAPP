@{
    ViewBag.Title = "List SL";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AccountDashboard">Account</a> >> List Book </b></p></div>
</div>
<section>
    <form action="#" id="frmListSL" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message"> 
            </div> 
         
            <div class="col-md-12 ftop">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="txtSLCode" class="col-sm-4 control-label">SL Code&nbsp;<span class="Mandatory">(*)</span></label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtSLCode" name="txtSLCode" tabindex="1" placeholder="Enter SL Code" type="text" maxlength="100" />

                        </div>
                    </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="ddlSLTypeId" class="col-sm-4 control-label">SL Type&nbsp;<span class="Mandatory">(*)</span></label>
                            <div class="col-sm-8">
                                <select id="ddlSLTypeId" name="ddlSLTypeId" style="width: 100%;height: 35px;" tabindex="3">
                                    
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            <div class="col-md-12">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="ddlGLMainGroupId" class="col-sm-4 control-label">Cost Center</label>
                        <div class="col-sm-8">
                            <select id="ddlCostCenterId" name="ddlCostCenterId"  tabindex="4" style="width: 100%;height: 35px;"></select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="ddlStatus" class="col-sm-4 control-label">Status</label>
                        <div class="col-sm-8">
                            <select id="ddlStatus" name="ddlStatus" style="width: 100%;height: 35px;" tabindex="5">
                                <option value="">ALL</option>
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" onclick="SearchSL()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        <a class="btn btn-success" id="btnList" href="@Url.Content("~/SL/AddEditSL")">Add More SL</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12">
                <div id="divList"> 
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/SL/ListSL.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>




