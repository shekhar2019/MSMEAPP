@model List<Portal.Core.ViewModel.PurchaseInvoiceTaxDetailViewModel>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblPITaxList">
            <thead>
                <tr>
                    <th>Tax Name</th>
                    <th>Tax Percentage</th>
                    <th>Tax Amount</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        
                        <td>@item.TaxName
                        <input type="hidden" id="hdnPITaxDetailId" value="@item.InvoiceTaxDetailId" />
                        <input type="hidden" id="hdnTaxId" value="@item.TaxId" />
                            <input type="hidden" id="hdnTaxName" value="@item.TaxName" />
                        </td>
                        <td>@item.TaxPercentage
                        <input type="hidden" id="hdnTaxPercentage" value="@item.TaxPercentage" />
                            <input type="hidden" id="hdnTaxAmount" value="@item.TaxAmount" />
                        </td>
                        <td id="tdTaxAmount">@item.TaxAmount
                            
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" onclick="EditTaxRow(this);" href="#"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-trash"  onclick="RemoveTaxRow(this)" href="#"></a>
                        </td>
                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblPITaxList">
            <thead>
                <tr>
                    <th>Tax Name</th>
                    <th>Tax Percentage</th>
                    <th>Tax Amount</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
}
