@model List<Portal.Core.ViewModel.TermTemplateDetailViewModel>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblTermTemplateDetailList">
            <thead>
                <tr> 
                    <th>Term Template Desc</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        
                        <td>@item.TermsDesc
                        <input type="hidden" id="hdnTrnId" value="@item.TrnId" />
                        <input type="hidden" id="hdnTermTemplateDesc" value="@item.TermsDesc" />
                        </td> 
                      
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" onclick="EditTermTemplateRow(this);" href="#"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-trash"  onclick="RemoveTermTemplateRow(this)" href="#"></a>
                        </td>
                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblTermTemplateDetailList">
            <thead>
                <tr>
                    <th>Term Desc</th> 
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
}
