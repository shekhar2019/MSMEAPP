@model List<Portal.Core.ViewModel.DeliveryChallanViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblChallanList">
            <thead>
                <tr>
                    <th>Challan No.</th>
                    <th>Challan Date</th>
                    <th>Customer Name</th>
                    <th>Shipping City</th>
                    <th>Shipping State</th>
                    <th>Dispatch Ref. No.</th>
                    <th>Dispatch Ref. Date</th>
                    <th>Gross Amount</th>
                    <th>Net Amount</th>
                    <th>Challan Status</th>
                    <th>Created By User</th>
                    <th>Created Date</th>
                    <th>Modified By User</th>
                    <th>Modified Date</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.ChallanNo</td>
                        <td>@item.ChallanDate</td>
                        <td>@item.CustomerName</td>
                        <td>@item.ShippingCity</td>
                        <td>@item.ShippingStateName</td>
                        <td>@item.DispatchRefNo</td>
                        <td>@item.DispatchRefDate</td>
                        <td>@item.BasicValue</td>
                        <td>@item.TotalValue</td>
                        @if (item.ApprovalStatus.ToUpper() == "DRAFT")
                        {
                            <td style="background-color:aquamarine">
                                @item.ApprovalStatus
                            </td>
                        }
                        else
                        {
                            <td style="background-color:green">
                                @item.ApprovalStatus
                            </td>

                        }
                        <td>@item.CreatedByUserName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedByUserName</td>
                        <td>@item.ModifiedDate</td>
                        <td class="btn btn-success table_btn" style="margin:0px auto;">
                            <a style="color:white"  class="fa fa-eye" aria-hidden="true" href="~/DeliveryChallan/AddEditDeliveryChallan?ChallanId=@item.ChallanId&AccessMode=3"></a>
                            @if (item.ApprovalStatus.ToUpper() == "DRAFT")
                            {
                                <a style="color:white" class="fa fa-pencil-square-o" href="~/DeliveryChallan/AddEditDeliveryChallan?ChallanId=@item.ChallanId&AccessMode=2"></a>
                            }
                        </td>
                        @*<td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                         
                        </td>*@

                    </tr>
                }
              
            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblChallanList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>
<style>
    .btn-success a {
        background-color: #446abc !important;
        border-color: #233e79 !important;
        display: -webkit-inline-box;
        padding: 5px;
    }
</style>