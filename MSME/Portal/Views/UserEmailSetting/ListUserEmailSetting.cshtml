@{
    ViewBag.Title = "ListUserEmailSetting";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row top-head">
    <div class="col-md-12"><p><b><a style="color:#fff;" href="~/Dashboard/AdminDashboard">Admin</a> >> List User </b></p></div>
</div>
<section>
    <form action="#" id="frmListUser" class="form-horizontal as" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <div class="row inner">
            <div class="message">

            </div>
        
            <div class="col-md-12 ftop">
                <div class="form-group col-md-6">
                    <label for="txtFullName" class="col-sm-4 control-label">User Name&nbsp;<span class="Mandatory">(*)</span></label>
                    <div class="col-sm-8">
                        <input id="txtFullName" name="txtFullName" type="text" placeholder="Search with User Name" maxlength="100" class="form-control" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label for="txtEmail" class="col-sm-4 control-label">Email Id</label>
                    <div class="col-sm-8">
                        <input id="txtEmail" type="text" name="txtEmail" placeholder="Search with Email id" maxlength="100" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12 ftop">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <center>
                        <input class="btn btn-success" value="Search" alt="Save" id="btnSearch" onclick="SearchUserEmailSetting()" type="button" border="0">&nbsp;&nbsp;
                        <input class="btn btn-success" type="button" id="btnReset" onclick="ClearFields()" value="Reset" /> &nbsp;&nbsp;
                        <a class="btn btn-success" id="btnList" href="@Url.Content("~/User/AddEditUser")">Add More User</a>
                    </center>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row col-sm-6 col-lg-12 col-md-12 ftop">
                <div id="divList">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="alertModel" role="dialog">
            <div class="modal-dialog  modal-sm">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modelHeader"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="modelText"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary  btn-block" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</section>
<script src="~/Scripts/UserEmailSetting/ListUserEmailSetting.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/paging.js"></script>
