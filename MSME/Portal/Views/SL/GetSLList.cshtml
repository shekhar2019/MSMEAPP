@model List<Portal.Core.ViewModel.SLViewModel>
<script src="~/Scripts/jquery.tablesorter.js"></script>
@if (Model != null && Model.Count > 0)
{
    <div style="overflow-x:scroll; padding:10px;">
        <table class="table" id="tblGLList">
            <thead>
                <tr>
                    <th>SL Code</th> 
                    <th>SL Head</th> 
                    <th>REF Code</th> 
                    <th>SL Type</th>  
                    <th>Cost Center</th>  
                    <th>SL Status</th>
                    <th colspan="2" align="center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="success">
                        <td>@item.SLCode</td>
                        <td>@item.SLHead</td>
                        <td>@item.RefCode</td>
                        <td>@item.SLTypeName</td>
                        <td>@item.CostCenterName</td>
                         
                        <td>@(item.SL_Status == true ? "Active" : "Inactive")</td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px auto;">
                            <a style="color:white" class="fa fa-eye" aria-hidden="true" href="~/SL/AddEditSL?SLId=@item.SLId&AccessMode=3"></a>
                        </td>
                        <td class="btn btn-success table_btn" style="width:30px; margin:0px 2px auto;">
                            <a style="color:white" class="fa fa-pencil-square-o" href="~/SL/AddEditSL?SLId=@item.SLId&AccessMode=2"></a>
                        </td> 
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h3 style="color:firebrick;text-align:center">Records not Found!!!</h3>
}
<script>
    $(document).ready(function () {
        $('#tblBookList').paging({
            limit: 10,
            rowDisplayStyle: 'block',
            activePage: 0,
            rows: []
        });

    });
</script>